<script>

    let signin = document.getElementById('signin');
    let signup = document.getElementById('signup');
    let namefield = document.getElementById('namefield');
    let title = document.getElementById('title');
    let para = document.getElementById("para");
    let ullist1 = document.getElementById('ullist1');
    let ullist2 = document.getElementById('ullist2');
    let upframe = document.getElementById("upframe");
    let upframe2 = document.getElementById('upframe2')
    signin.onclick = function () {
        namefield.style.maxHeight = '0';
        signin.style.background = 'rgb(188, 47, 188)';
        signin.style.color = 'white';
        signup.style.background = 'none';
        signup.style.color = 'black';
        title.innerHTML = 'Sign in';
        para.style.display = 'none';
        signin.innerHTML = '<a href="butterfly_animation2.html" style="color:white">sign in</a>'
    }
    signup.onclick = function () {
        signup.style.background = 'rgb(188, 47, 188)';
        signup.style.color = 'white';
        namefield.style.maxHeight = '65px';
        signin.style.background = 'none';
        signin.style.color = 'black';
        title.innerHTML = 'Sign up';
        para.style.display = 'block';
        signin.innerHTML = 'sign in'
    }
    function ul_display() {
        ullist1.style.display = 'block';
        ullist2.style.display = 'block';
        upframe.style.display = 'none';
        upframe2.style.display = 'none';


    }
    setTimeout(ul_display, 2200);

</script>

